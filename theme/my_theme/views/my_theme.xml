<?xml version="1.0" encoding="utf-8"?>
<openerp>
 <data>
  <template id="theme" inherit_id="website.theme" name="My Theme Assets">
   <xpath expr="//link[@id='bootstrap_css']" position="replace">
    <link rel="stylesheet" type="text/css" href="/my_theme/static/src/css/my_theme.css" />
   </xpath>
  </template>
  <template id="assets_frontend" inherit_id="website.assets_frontend" name="My Theme Front End Assets">
   <xpath expr="." position="inside">
    <script src="/my_theme/static/src/js/snippet.js"></script>
   </xpath>
  </template>
 </data>
</openerp>